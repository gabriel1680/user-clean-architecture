{
   "compilerOptions": {
      "lib": [
         "ES5",
         "ES6",
         "ES2018"
      ],
      "rootDir": ".",
      "baseUrl": "/",
      "paths": {
         "@domain/*": ["src/domain/*"],
         "@infra/*": ["src/infra/*"],
         "@main/*": ["src/main/*"],
         "@adapters/*": ["src/adapters/*"],
         "@application/*": ["src/application/*"]
      },
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "declaration": false,
      "isolatedModules": false,
      "skipLibCheck": true
   }
}